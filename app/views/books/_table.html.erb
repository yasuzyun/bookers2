<table class="table table-hover">
  <thead>
    <tr><th></th><th>Title</th><th>Opinion</th><th></th><th></th></tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
         <%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>

    </tr>
    <% end %>
  </tbody>
</table>