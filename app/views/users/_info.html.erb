<table class="table">
  <tr>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: 'no-image.jpg', size:'100x100' %>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>
<%= link_to '', edit_user_path(user), class:'btn btn-default btn-block glyphicon glyphicon-wrench' %>
